<div class = "page-content">
  <p id="notice" class="text-center text-success pt-4"><%= notice %></p>
  <h1 class="text-center pt-4"><%= @user.username %>'s profile</h1>
  <h3 class="text-center mt-4">Blog's</h3>
  <% if logged_in? && (@user == current_user || current_user.admin?) %>
    <div class="text-center mt-4">
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-primary" %>
       <%= link_to "Delete profile", user_path(current_user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
  <%= render 'blogs/blog' %>
</div> 